{
  "name": "@create-figma-plugin/common",
  "version": "2.3.0",
  "publishConfig": {
    "access": "public"
  },
  "description": "Internal utilities for the Create Figma Plugin toolkit",
  "keywords": [
    "create-figma-plugin",
    "figjam",
    "figma",
    "figma-plugin",
    "figma-plugins"
  ],
  "license": "MIT",
  "author": "Yuan Qing Lim",
  "repository": {
    "type": "git",
    "url": "git://github.com/yuanqing/create-figma-plugin.git",
    "directory": "packages/common"
  },
  "type": "module",
  "engines": {
    "node": ">=18"
  },
  "files": [
    "lib"
  ],
  "exports": "./lib/index.js",
  "main": "./lib/index.js",
  "scripts": {
    "prebuild": "npm run clean",
    "build": "npm run build:js && npm run build:generate-index",
    "build:js": "tsc --build",
    "build:generate-index": "tsx ../../scripts/generate-index.ts -- 'src/**/*.ts' && eslint --fix src/index.ts",
    "clean": "rimraf '*.log' .turbo lib tsconfig.tsbuildinfo",
    "fix": "concurrently npm:fix:js npm:fix:json",
    "fix:js": "eslint --fix '{src,test}/**/*.ts'",
    "fix:json": "prettier --loglevel error --write '*.json' 'test/**/fixtures/**/*.json'",
    "lint": "eslint '{src,test}/**/*.ts'",
    "pretest": "npm run build",
    "test": "ava --serial 'test/**/*.ts'"
  },
  "dependencies": {
    "@sindresorhus/slugify": "2.1.1",
    "fs-extra": "^11.1.0",
    "kleur": "^4.1.5"
  },
  "devDependencies": {
    "@types/fs-extra": "^9.0.13",
    "@types/node": "^18.11.17",
    "@typescript-eslint/eslint-plugin": "5.47.0",
    "ava": "^5.1.0",
    "concurrently": "^7.6.0",
    "eslint": "^8.30.0",
    "eslint-config-yuanqing": "0.0.7",
    "eslint-plugin-import": "2.26.0",
    "eslint-plugin-prettier": "4.2.1",
    "eslint-plugin-react": "7.31.11",
    "eslint-plugin-react-hooks": "4.6.0",
    "eslint-plugin-simple-import-sort": "8.0.0",
    "eslint-plugin-sort-keys-fix": "1.1.2",
    "prettier": "^2.8.1",
    "rimraf": "^3.0.2",
    "tsx": "^3.12.1",
    "typescript": "^4.9.4"
  },
  "ava": {
    "extensions": {
      "ts": "module"
    },
    "failFast": true,
    "nodeArguments": [
      "--loader",
      "tsx"
    ],
    "timeout": "2m",
    "workerThreads": false
  },
  "eslintConfig": {
    "extends": "eslint-config-yuanqing",
    "root": true,
    "env": {
      "node": true
    }
  },
  "prettier": "eslint-config-yuanqing/prettier",
  "gitHead": "857edf16f9032913b1c177d2d29439a4ed9b3716"
}
